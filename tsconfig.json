{
  "$schema": "http://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "allowJs": true,
    "charset": "utf8",
    "forceConsistentCasingInFileNames": true,
    "module": "commonJS",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "newLine": "lf",
    "outDir": "build",
    "pretty": true,
    "experimentalDecorators": true,
    "removeComments": true,
    "resolveJsonModule": true,
    "rootDir": "src",
    "sourceMap": true,
    "declaration": true,
    "strict": true,
    "target": "es2015",
    "lib": [
        "ES2019.Array"
    ]
  },
  "include": [
    "src"
  ]
}
